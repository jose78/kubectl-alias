    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": ["deploy"],
            
            "env": {
                "KUBEALIAS": "${workspaceFolder}/resources/kube_alias.yml"
            }
        },{
            "name": "Help Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": ["pods -h"],
            "env": {
                "KUBEALIAS": "${workspaceFolder}/resources/kube_alias.yml"
            }
        },{
            "name": "Events Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": ["events"],
            "env": {
                "KUBEALIAS": "${workspaceFolder}/resources/kube_alias.yml"
            }
        },{
            "name": "PODS Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": ["pods"],
            "env": {
                "KUBEALIAS": "${workspaceFolder}/resources/kube_alias.yml"
            }
        }
    ]
}